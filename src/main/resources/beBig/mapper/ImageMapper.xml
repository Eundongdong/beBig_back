<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="beBig.mapper.ImageMapper">
    <!-- 게시글 ID로 이미지 목록 조회 -->
    <select id="findByPostId">
        SELECT *
        FROM image
        WHERE post_id =#{post_id}
    </select>

    <!-- 이미지 경로로 이미지 조회 -->
    <select id="findByImagePath">
        SELECT *
        FROM image
        WHERE image_path=#{imagePath}
    </select>

    <!-- 이미지 추가 -->
    <insert id="insertImage">
        INSERT INTO image(image_path, post_id)
        VALUES (#{imagePath},#{postId})
    </insert>

    <!-- 이미지 경로로 이미지 삭제 -->
    <delete id="deleteByImagePath">
        DELETE FROM image
        WHERE image_path =#{image_path}
    </delete>

    <!-- 게시글 번호로 이미지 모두 삭제 -->
    <delete id="deleteByPostId">
        DELETE FROM image
        WHERE post_id=#{post_id}
    </delete>
</mapper>